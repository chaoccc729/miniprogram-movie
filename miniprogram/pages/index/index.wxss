/* pages/index/index.wxss */
#movieList{
  display: flex;
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #CDC9C9 ;
  font-size: 23rpx;
  font-weight: 600;
}
.mo_img{
  width: 240rpx;
  height: 100%;
  margin-right: 30rpx;
}
.movie_info{
  flex-grow: 1;
  width: 330rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
}
.mo_title{
  margin-bottom: 20rpx;
  font-size: 40rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.mo_time{
  color: #FF4040;
}
.mo_aver{
  color:#FF7F00;
}
#mo_btn{
  margin-top: 180rpx;
  margin-right: 50rpx;
}
.mo_cast{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

